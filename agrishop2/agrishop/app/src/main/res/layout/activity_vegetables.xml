<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/blur">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:id="@+id/vegetablesContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Tomato -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgTomato"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:src="@drawable/imgtomato"
                    android:contentDescription="Tomato"
                    android:longClickable="true"
                    android:onClick="onImageLongClick"
                    android:background="?android:attr/selectableItemBackground"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tomato"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="16dp"/>
            </LinearLayout>

            <!-- Onion -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgOnion"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:src="@drawable/imgonion"
                    android:contentDescription="Onion"
                    android:longClickable="true"
                    android:onClick="onImageLongClick"
                    android:background="?android:attr/selectableItemBackground"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Onion"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="16dp"/>
            </LinearLayout>

            <!-- Brinjal -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgBrinjal"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:src="@drawable/imgbrinjal"
                    android:contentDescription="Brinjal"
                    android:longClickable="true"
                    android:onClick="onImageLongClick"
                    android:background="?android:attr/selectableItemBackground"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Brinjal"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="16dp"/>
            </LinearLayout>

            <!-- Lady Finger -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgLadyFinger"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:src="@drawable/imgladyfinger"
                    android:contentDescription="Lady Finger"
                    android:longClickable="true"
                    android:onClick="onImageLongClick"
                    android:background="?android:attr/selectableItemBackground"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lady Finger"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="16dp"/>
            </LinearLayout>

            <!-- Cabbage -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgCabbage"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:src="@drawable/cabbage"
                    android:contentDescription="Cabbage"
                    android:longClickable="true"
                    android:onClick="onImageLongClick"
                    android:background="?android:attr/selectableItemBackground"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cabbage"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="16dp"/>
            </LinearLayout>

            <!-- Mushroom -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgMushroom"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:src="@drawable/mushroom"
                    android:contentDescription="Mushroom"
                    android:longClickable="true"
                    android:onClick="onImageLongClick"
                    android:background="?android:attr/selectableItemBackground"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mushroom"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="16dp"/>
            </LinearLayout>

            <Button
                android:id="@+id/show_notification_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Discount" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>