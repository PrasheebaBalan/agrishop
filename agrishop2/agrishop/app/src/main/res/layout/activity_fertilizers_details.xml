<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- ListView to display fertilizer details -->
    <ListView
        android:id="@+id/fertilizerDetailsListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp"
        android:padding="16dp" />

    <!-- Button for asking fertilizer recommendation -->
    <Button
        android:id="@+id/askForRecommendationButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ask for Fertilizer Recommendation"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp" />

</RelativeLayout>
